@model List<SelectListItem>


@{
    ViewData["Title"] = "Search Disease";
   
   


}




<head>
    <link rel="stylesheet" href="~/css/site.css" />
   
    <script src="~/js/site.js"></script>
</head>

<h4>Symptome</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchDiseaseResults">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="SearchPhrase" class="control-label"></label>
                <input id="SearchLabel" name="SearchPhrase" class="form-control" onchange="ErrorMessage"/>

            </div>

            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary"  />
            </div>
        </form>
    </div>


    <form asp-action="FilterDiseaseResults">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        
        

        <table>
            @foreach (var filter in Model)
            {
                <tr>
                    <td>
                        <input id="@filter.Value" type="checkbox" name="Filter" value="@filter.Value" checked="@filter.Selected" />
                    </td>
                    <td>
                        <label for="@filter.Value">@filter.Text</label>
                    </td>
                </tr>
            }
        </table>



        <input type="submit" value="Filter" class="btn btn-primary" />

    </form>
    <span id="ErrorMessage"></span>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}